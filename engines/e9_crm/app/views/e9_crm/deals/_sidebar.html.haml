%h2 Parties Involved

%fieldset.deal-owner
  %legend= t(:deal_owner_legend)
  .deal-contact
    - if resource.owner
      = link_to resource.owner do
        .contact-photo 
          = image_mount_tag resource.owner.avatar, :alt => "Photo for #{resource.owner.name}"
        .contact-name= resource.owner.name
        .contact-title= title_and_or_company(resource.owner)
    - else
      .contact-photo 
        = image_mount_tag User.new.avatar, :alt => "Default Contact Photo"
      .contact-name
        = t(:no_deal_owner)

- if resource.contacts.any?
  %fieldset.deal-contacts
    %legend= t(:deal_contact_legend)
    - resource.contacts.each do |contact|
      .deal-contact
        = link_to contact do
          .contact-photo 
            = image_mount_tag contact.avatar, :alt => "Photo for #{contact.name}"
          .contact-name= contact.name
          .contact-title= title_and_or_company(contact)
