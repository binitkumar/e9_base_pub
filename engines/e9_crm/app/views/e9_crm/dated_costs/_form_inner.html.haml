- if credit = f.object.credit?
  .field
    = f.label :label
    = f.text_field :label
- unless local_assigns[:hide_date]
  .field.date-picker
    = f.label :date, nil, :class => :req
    = f.text_field :date, :class => 'date-picker', :value => l(f.object.date)
.field.cost
  = f.label :cost, credit ? nil : f.object.label, :class => :req
  = f.text_field :cost, :value => f.object.value.to_money
