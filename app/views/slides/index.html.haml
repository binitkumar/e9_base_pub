- meta_tags parent

- content_for :slideshow_title do
  = index_title

  - content_for :slide_bottom do
    - if parent.display_slide_selector?
      #slide-selector
        = render 'slide_selector'

    #slide-comments

- if collection.empty?
  - content_for :slide_content do
    = e9_t(:no_records_text)

- else
  - content_for :javascripts do
    = include_javascripts :slides

  - content_for :bottom_javascripts do
    #slideshow-load{'data-url' => contextual_slide_url(parent), 'data-slide' => resource.to_param}
