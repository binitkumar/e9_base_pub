- url = listing.url
.listing
  .left-block
    .thumb
      = link_to image_mount_tag(listing.thumb), url
    = actions_list(:wrapper => true)
  .block
    .title
      = link_to feed_title_excerpt_or_snippet(listing.commentable.title, local_assigns[:query], local_assigns[:title_length]), url
    .info
      = e9_t(:listing_header, :author => listing.author.try(:username) || '', :commentable_model => listing.commentable.class.model_name.human, :scope => :comments)
    = content_labels_with_context(listing, :highlight => local_assigns[:query])
    .summary
      = feed_summary_excerpt_or_snippet(listing.body, local_assigns[:query], local_assigns[:summary_length]) 
