- url = listing.url
- add_actions_list_item link_to(e9_t(:edit_link), edit_topic_path(listing), :class => "action-link edit-link") if admin?
.listing
  .left-block
    .thumb
      = link_to image_mount_tag(listing.thumb), listing.url
    = actions_list(:wrapper => true)
  .block
    .title
      = link_to feed_title_excerpt_or_snippet(listing.title, local_assigns[:query], local_assigns[:title_length]), url
    = content_labels_with_context(listing, :highlight => local_assigns[:query])
    = topic_last_reply_byline(listing)
    .summary
      = feed_summary_excerpt_or_snippet comment_body_escape(listing.body), local_assigns[:query], local_assigns[:summary_length]
