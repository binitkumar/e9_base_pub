= form_for(resource, :url => polymorphic_path([:admin, resource]), :html => {:multipart => true}) do |f|
  = resource_error_messages!
  .field
    = f.label :parent_id, nil, :class => :req
    = f.select :parent_id, parent_menu_select_options(resource)
  .field
    = f.label :name, nil, :class => :req
    = f.text_field :name
  .field
    = f.label :href, nil, :class => :req
    = f.text_field :href

  = render 'admin/menus/advanced_settings', :f => f

  .actions
    = f.submit e9_t(:save_link)
