= form_tag polymorphic_path([:update_order, :admin, @faq, resource_class]) do
  %table.records.sortable
    %thead
      %tr
        %th= resource_humanize(:position)
        %th= resource_humanize(:title)
        %th= e9_t(:actions)
    - if collection.empty?
      %tr
        %td{:colspan => 3}= e9_t(:no_records_text)
    - else
      - collection.each do |record|
        %tr{:id => "ids_#{record.id}", :class => cycle('odd', 'even')}
          %td.handle +++
          %td.txt= record.title
          %td.actions
            = tool_buttons do
              = edit_admin_resource_link(record, :scopes => @faq)
              = destroy_admin_resource_link(record, :scopes => @faq)
